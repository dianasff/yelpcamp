<%- include("partials/header")%>
<div class='container'>
	<header class='jumbotron'>
		<div class='container'>
			<h1>Welcome to Veggie Tasty!</h1>
			<p> View our hand-picked vegan recipes from all over the world!</p>	
			<a class="btn btn-primary btn-large" href="/recipes/new"> Add a new recipe!</a>

		</div>
	</header>
	
	<div class="row text-center" style='display:flex; flex-wrap: wrap;  '>
		<% recipes.forEach(function(recipe){ %>
			<div class='col-md-4 col sm-6'>
				<div class='thumbnail'>
					<img src="<%= recipe.image %>" >
					<div class='caption'>
						<h4> <%= recipe.name %> </h4>
					</div>
				</div>
				
			</div>
		<% }); %>
	</div>
	

</div>



<%- include("partials/footer")%>